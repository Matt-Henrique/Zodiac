<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:gravity="center"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image_main"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="30dp"
        android:contentDescription="@string/image_main"
        app:srcCompat="@drawable/gold_cloths" />

    <TextView
        android:id="@+id/text_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/spinner_days"
        android:layout_alignStart="@+id/spinner_days"
        android:text="@string/text_day"
        android:textColor="#ffffff" />

    <Spinner
        android:id="@+id/spinner_days"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_main"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@android:color/background_light" />

    <TextView
        android:id="@+id/text_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/spinner_months"
        android:layout_alignStart="@+id/text_day"
        android:text="@string/text_month"
        android:textColor="#ffffff" />

    <Spinner
        android:id="@+id/spinner_months"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner_days"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:background="@android:color/background_light" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/spinner_months"
        android:text="@string/btn_submit" />
</RelativeLayout>